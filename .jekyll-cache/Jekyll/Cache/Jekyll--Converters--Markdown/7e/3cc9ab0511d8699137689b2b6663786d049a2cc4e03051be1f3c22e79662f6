							<span class="nx">$</span><span class="p">(</span><span class="dl">'</span><span class="s1">#animasi</span><span class="dl">'</span><span class="p">).</span><span class="nx">hide</span><span class="p">(</span><span class="dl">'</span><span class="s1">slow</span><span class="dl">'</span><span class="p">).</span><span class="nx">slideUp</span><span class="p">(</span><span class="mi">1000</span><span class="p">);</span>
						<span class="p">},</span> <span class="mi">3000</span><span class="p">);</span>
						
					<span class="p">}</span><span class="k">else</span><span class="p">{</span>
						<span class="nx">alert</span><span class="p">(</span><span class="dl">'</span><span class="s1">Failed update</span><span class="dl">'</span><span class="p">);</span>
