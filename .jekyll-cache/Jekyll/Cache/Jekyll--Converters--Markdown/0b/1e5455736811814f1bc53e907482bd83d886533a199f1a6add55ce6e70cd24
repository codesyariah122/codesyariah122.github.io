                    <span class="s1">'fallback_cb'</span>       <span class="o">=&gt;</span> <span class="s1">'WP_Bootstrap_Navwalker::fallback'</span><span class="p">,</span>
                    <span class="s1">'walker'</span>            <span class="o">=&gt;</span> <span class="k">new</span> <span class="nc">WP_Bootstrap_Navwalker</span><span class="p">(),</span>
