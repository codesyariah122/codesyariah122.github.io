            <span class="cp">&lt;?php</span>
                <span class="nf">wp_nav_menu</span><span class="p">(</span> <span class="k">array</span><span class="p">(</span>
                    <span class="s1">'theme_location'</span>    <span class="o">=&gt;</span> <span class="s1">'primary'</span><span class="p">,</span>
                    <span class="s1">'depth'</span>             <span class="o">=&gt;</span> <span class="mi">2</span><span class="p">,</span>
